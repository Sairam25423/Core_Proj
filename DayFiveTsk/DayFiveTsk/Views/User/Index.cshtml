@model IEnumerable<DayFiveTsk.Models.User>
@{
    ViewBag.Title = "User List";
}
<div class="container">
    <div class="card">
        <div class="card header">
            <h2 class="text-primary text-center">Users List</h2>
        </div>
        <div class="card body">
            <div class="row">
                <div class="col-mg-4"></div>
                <div class="col-mg-4 text-center">
                    <form asp-controller="User" asp-action="Index" method="get" class="p-5">
                        <input type="text" name="search" placeholder="Search..." value="@Context.Request.Query["search"]" />
                        <button type="submit">Search</button>
                    </form>
                </div>
                <div class="col-mg-4"></div>
            </div>

            <div class="row mt-3">
                <div class="table-responsive">
                    <table class="table table-hover table-striped table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th><a asp-route-sortOrder="@ViewBag.NameSort"></a></th>
                                <th><a asp-route-sortOrder="@ViewBag.AgeSort"></a></th>
                                <th>Eamil</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Age</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
